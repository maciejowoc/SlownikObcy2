@page
@model SlownikObcy2.Pages.TlumaAngielski.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8" />
    @section Styles {
        <link href="@Url.Content("~/css/Ang.css")" rel="stylesheet" />
    }
</head>

<div id="tresc" class="align-content-center" style="width:50%; margin-left:25%;">
    <h1>Dodaj nowe hasło</h1>
    <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Angielski.Obcy" class="control-label">Obca fraza:</label>
                <input asp-for="Angielski.Obcy" class="form-control" />
                <span asp-validation-for="Angielski.Obcy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Angielski.Polski" class="control-label">Polska fraza:</label>
                <input asp-for="Angielski.Polski" class="form-control" />
                <span asp-validation-for="Angielski.Polski" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-outline-success" />
                    <a asp-page="Index" class=" btn btn-outline-danger">Powrót do słownika</a>
                </div>
            </div>
        </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
